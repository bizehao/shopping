<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ig_img"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/tta" />

        <TextView
            android:id="@+id/ig_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ig_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorBlack"
            android:text="你好你好你好你好" />

        <TextView
            android:id="@+id/ig_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorRed"
            android:layout_below="@+id/ig_introduce"
            android:layout_marginTop="2dp"
            android:layout_marginStart="5dp"
            android:textSize="13sp"
            android:text="￥9.9"/>

        <TextView
            android:id="@+id/ig_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ig_introduce"
            android:layout_toEndOf="@+id/ig_price"
            android:textColor="@color/colorBlack001"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:textSize="13sp"
            android:text="以售36万件"/>

        <Button
            android:id="@+id/ig_purchase"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:background="@drawable/button004"
            android:layout_below="@+id/ig_introduce"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="2dp"
            android:textColor="@color/colorRed"
            android:textSize="10sp"
            android:text="加入购物车"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>

